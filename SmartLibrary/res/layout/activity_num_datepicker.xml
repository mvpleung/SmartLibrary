<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_date"
    style="@style/layout_widthMatch_heightMatch"
    android:background="@drawable/corner_round_white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/layout_widthMatch_heightWrap"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_10"
        android:text="@string/calendar_choice_date"
        android:textColor="@color/body_font_gray" />

    <com.ai.android.picker.DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/body_gray_bold" />

    <Button
        android:id="@+id/btn_sure"
        style="@style/TextItem_MatchMinHeight_Size30"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@android:color/transparent"
        android:text="@string/app_ok"
        android:textColor="@color/yellow_textcolor_selector" />

</LinearLayout>