<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_load_footer_content"
    style="@style/layout_widthMatch_heightWrap"
    android:gravity="center"
    android:minHeight="40dp"
    android:padding="0dp" >

    <ProgressBar
        android:id="@+id/pull_to_load_footer_progressbar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:indeterminateDrawable="@anim/update_loading_bar" />

    <TextView
        android:id="@+id/pull_to_load_footer_hint_textview"
        style="@style/layout_widthWrap_heightWrap"
        android:layout_gravity="center_vertical"
        android:text="@string/pull_is_loading"
        android:textColor="#999999"
        android:textSize="@dimen/font_size_30" />

</LinearLayout>