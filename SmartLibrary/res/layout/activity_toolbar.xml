<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:background="@mipmap/statusbar_bg" >

    <com.exiaobai.library.widget.CustomTextView
        android:id="@+id/tv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tool_bar_selector"
        android:drawableLeft="@mipmap/arrow"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:scaleType="center"
        app:boundHeight="@dimen/toolbar_back_height"
        app:boundWidth="@dimen/toolbar_back_width" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/statusbar_textcolor"
        android:textSize="@dimen/font_size_36" />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/tool_bar_selector"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:text=""
        android:textColor="@color/statusbar_textcolor"
        android:textSize="@dimen/font_size_36" />

    <ImageView
        android:id="@+id/im_title_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_title_right"
        android:background="@drawable/tool_bar_selector"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/small_padding"
        android:scaleType="fitCenter"
        android:visibility="invisible" />

</RelativeLayout>