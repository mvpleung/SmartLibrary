<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="false" >
	    <shape>
			<padding
				android:bottom="2dip"
				android:left="0dip"
				android:right="0dip"
				android:top="0dip" />
			<solid android:color="#4298d5" />
			<corners android:radius="8dip"/>
		</shape>
	</item>
	
	<item android:state_pressed="true" >
	    <shape>
			<padding
				android:bottom="2dip"
				android:left="0dip"
				android:right="0dip"
				android:top="0dip" />
			<solid android:color="#4f8bb5" />
			<corners android:radius="8dip"/>
		</shape>
	</item>
</selector>