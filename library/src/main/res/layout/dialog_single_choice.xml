<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    style="@style/layout_widthWrap_heightWrap"
    android:layout_marginBottom="@dimen/dimen_24"
    android:layout_marginTop="@dimen/dimen_24"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/layout_widthMatch_heightWrap"
        android:layout_height="@dimen/dimen_minimum"
        android:layout_marginLeft="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:textColor="@color/body_font_gray" />

    <TextView
        style="@style/layout_widthMatch_heightWrap"
        android:layout_height="1dp"
        android:background="@color/dialog_title_divider" />

    <ListView
        android:id="@+id/lv_list"
        style="@style/listview_heightWrap"
        android:descendantFocusability="beforeDescendants"
        android:divider="#E7E7E7"
        android:dividerHeight="0.7dp" />

</LinearLayout>